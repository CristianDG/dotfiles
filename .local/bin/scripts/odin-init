#! /usr/bin/env bash

mkdir -p bin
mkdir -p src


if ! [ -f bin/.gitignore ]; then
echo "
*
!.gitignore" > bin/.gitignore
fi

if ! [ -f src/main.odin ]; then
cat << EOF > src/main.odin
package main

import "core:fmt"

main :: proc() {
  fmt.println("opa")
}
EOF
fi


if ! [ -f build.sh ]; then
cat << "EOF" > build.sh
#! /usr/bin/env sh

[[ -z $BUILD_DIR ]] && BUILD_DIR=src
[[ -z $OUT_FILE  ]] && OUT_FILE=bin/out

odin build $BUILD_DIR -out:$OUT_FILE

EOF

chmod +x build.sh
fi


if ! [ -f ols.json ]; then
  touch ols.json
#   ols_filepath="$(whereis -b ols | awk '{print $2}')"
#   ols_filepath="$(readlink $ols_filepath)"
#   cp "$ols_filepath.json" .
fi

