#! /usr/bin/env zsh

percentage="$(pactl get-sink-volume 0 | awk '{print $5}')"
sink="alsa_output.pci-0000_00_1f.3.analog-stereo"


if [ "$1" = "up" ]; then
  [[ $(( ${percentage%%(%)} < 100)) = "1" ]] && pactl set-sink-volume $sink +5%
elif [ "$1" = "down" ]; then
  pactl set-sink-volume $sink -5%
else
  echo "$percentage"
fi
